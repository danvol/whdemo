<?xml version="1.0" encoding="UTF-8"?>

<config>
	<var-def name="weblio">
		<html-to-xml>
			<http method="post" url="http://cjjc.weblio.jp/content/%E3%81%82%E3%81%84%E3%81%8B%E3%82%8F%E3%82%89%E3%81%9A">
		    </http>
		</html-to-xml>
	</var-def>
	
	<!--白水社 中国語辞典-->
	<xpath expression="//div[@class='Cgkgj']/p[not(.=preceding::p)]/span[contains(text(),'中国語訳')]/..[1]/a[1]/text()">
		<var name="weblio"></var>
	</xpath>
	<!--
	<xpath expression="//div[@class='Cgkgj']/p[not(.=preceding::p)]/span[contains(text(),'解説')]/following-sibling::node()/text()">
		<var name="weblio"></var>
	</xpath>
	<xpath expression="//div[@class='Cgkgj']/p[not(.=preceding::p)]/span[contains(text(),'解説')]/following-sibling::node()/..[1]/text()">
		<var name="weblio"></var>
	</xpath>
	-->
	<!--EDR日中対訳辞書-->
	<xpath expression="//div[@class='Edrct']/p[not(.=preceding::p)]/span[contains(text(),'読み方')]/../text()">
		<var name="weblio"></var>
	</xpath>
	<xpath expression="//div[@class='Edrct']/p[not(.=preceding::p)]/span[contains(text(),'中国語訳')]/..[1]/a[1]/text()">
		<var name="weblio"></var>
	</xpath>
	
	<!--日中中日専門用語辞典-->
	<xpath expression="//div[@class='Ncsmy']/span[@class='ncsmyC']/a[@title='読み方']/..[1]/..[1]/text()/normalize-space()">
		<var name="weblio"></var>
	</xpath>
	<xpath expression="//div[@class='Ncsmy']/span[text()='中国語訳']/following-sibling::node()/@title">
		<var name="weblio"></var>
	</xpath>

</config>